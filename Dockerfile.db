FROM python:2.7
WORKDIR /app
ADD db_copy/* /app/
ADD requirements.txt gunicorn.conf db_app.py db_config.py app_logging.py /app/
# ADD email_celery_app_config.py.example /app/email_celery_app_config.py
COPY ssh_config /home/appuser/.ssh/config
RUN useradd -u 1000 -g 0 appuser && \
    pip install -r requirements.txt && \
    mkdir /instance && \
    touch /instance/db_config.py && \
    chgrp -R 0 /instance && \
    chgrp -R 0 /app && \
    chmod -R 770 /instance && \
    chmod -R 770 /app && \
    chown -R 1000:0 /home/appuser && \
    chmod -R 700 /home/appuser/.ssh/
USER 1000:0
EXPOSE 4002
ENTRYPOINT ["/usr/local/bin/gunicorn", "--config", "/app/gunicorn.conf", "-b", ":4002", "db_app:app"]